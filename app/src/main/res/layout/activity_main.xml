<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <cn.ac.iscas.customviewtest.view.CustomTextView
            android:id="@+id/test1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            custom:image="@drawable/ic_launcher"
            custom:imageScaleType="center"
            custom:text="Hello World!"
            custom:textColor="@color/colorAccent"
            custom:textSize="20sp"
            />

        <cn.ac.iscas.customviewtest.view.CustomProgressBar
            android:layout_below="@+id/test1"
            android:id="@+id/test2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            custom:speed="20"
            custom:circleWidth="10dp"
            custom:firstColor="@color/colorAccent"
            custom:secondColor="@color/colorPrimary"
            />
        <cn.ac.iscas.customviewtest.view.CustomCircleControlBar
            android:layout_below="@+id/test2"
            android:id="@+id/test3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            custom:firstColor="@color/colorAccent"
            custom:secondColor="@color/colorPrimary"
            custom:circleWidth="20dp"
            custom:splitSize="3"
            custom:dotCount="60"
            />

        <cn.ac.iscas.customviewtest.view.CustomCircleProgressBar
            android:layout_below="@+id/test3"
            android:id="@+id/test4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            custom:firstColor="@color/colorAccent"
            custom:secondColor="@color/colorPrimary"
            custom:circleWidth="20dp"
            custom:splitSize="3"
            custom:dotCount="60"
            />
        <Button
            android:layout_below="@+id/test4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CustomLayout"
            android:onClick="CustomLayout"/>
    </RelativeLayout>
</ScrollView>
