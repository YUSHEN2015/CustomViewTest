<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="textColor" format="color"/>
    <attr name="textSize" format="dimension"/>
    <attr name="text" format="string"/>
    <attr name="image" format="reference" />
    <attr name="imageScaleType">
        <enum name="fillXY" value="0" />
        <enum name="center" value="1" />
    </attr>

    <declare-styleable name="CustomTextView">
        <attr name="textColor"/>
        <attr name="textSize"/>
        <attr name="text"/>
        <attr name="image"/>
        <attr name="imageScaleType"/>
    </declare-styleable>

    <attr name="firstColor" format="color" />
    <attr name="secondColor" format="color" />
    <attr name="circleWidth" format="dimension" />
    <attr name="dotCount" format="integer"/>
    <attr name="currentCount" format="integer"/>
    <attr name="splitSize" format="integer"/>
    <attr name="bg" format="reference"/>


    <declare-styleable name="CustomProgressBar">
        <attr name="firstColor"/>
        <attr name="secondColor"/>
        <attr name="circleWidth"/>
        <attr name="speed" format="integer" />
    </declare-styleable>

    <declare-styleable name="CustomCircleControlBar">
        <attr name="firstColor"/>
        <attr name="secondColor"/>
        <attr name="circleWidth"/>
        <attr name="dotCount"/>
        <attr name="currentCount"/>
        <attr name="splitSize"/>
        <attr name="bg"/>
    </declare-styleable>

    <declare-styleable name="CustomCircleProgressBar">
        <attr name="firstColor"/>
        <attr name="secondColor"/>
        <attr name="circleWidth"/>
        <attr name="dotCount"/>
        <attr name="currentCount"/>
        <attr name="splitSize"/>
        <attr name="bg"/>
    </declare-styleable>
</resources>
